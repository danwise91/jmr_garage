    <h4><%= part.name %></small></h4>
      <div class="fb-like" data-href="http://localhost:3000/parts/14" data-layout="button_count"
       data-action="like" data-show-faces="true" data-share="true"></div>
    
        Category: <%=@part.category.name%>
    </head>
