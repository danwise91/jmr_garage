<h1> All the parts</h1>
<% if admin?%>
<% @parts.each do |part| %>
<%=part.id%><%= part.name %><%= link_to "edit part", edit_part_path(id: part.id)%> <%= link_to 'delete',part_path(id: part.id),
method: :delete, data: { confirm: "Are you sure?"} %><br>
<%end%>
<%= link_to "home", root_path%>
<%end%>

<h3 class="text-center">Parts for Sale</h3>

<div class="row">
  <div class="col-xs-6 col-xs-offset-3">
    <% @parts.each do |part| %>
      <%= render "part_row", part: part, order_item: @order_item %>
    <% end %>
  </div>
</div>
