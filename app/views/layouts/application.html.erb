<!DOCTYPE html>
<html>
<head>
  <title>JmrWeb</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% unless current_user%><%= link_to "Sign up", signup_path %><%end%>
  <% unless current_user %> <%= link_to "Log In", login_path %> <%end%>
  <% if current_user%> <%= link_to "Hello, #{current_user.first_name}", user_path(id: current_user.id)%> <%end%>
  <% if facebook_user%> <%= link_to "#{facebook_user.name}", user_path(id: facebook_user.id)%> <%end%>
  <% if current_user%> <%= link_to "Log Out", logout_path%><%end%>
  <% unless current_user %><%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in"%><%end%>
<%= yield %>

</body>
</html>
